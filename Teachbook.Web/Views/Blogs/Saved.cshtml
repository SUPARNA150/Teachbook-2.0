@model IEnumerable<Teachbook.Web.Models.Domain.BlogPost>
@{
    ViewData["Title"] = "Saved Blogs";
}

<div class="bg-light bg-opacity-30 py-3 text-center">
    <div class="container">
        <h3>Your Saved Blogs</h3>
    </div>
</div>

<div class="container my-5">

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-bookmark"></i> You haven’t saved any blogs yet.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var blogPost in Model)
            {
                <div class="col-12 col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 border-0">
                        <img src="@blogPost.FeaturedImageUrl" class="card-img-top" alt="@blogPost.Heading" />
                        <div class="card-body d-flex flex-column border-start border-end border-bottom rounded-bottom">
                            <h5 class="card-title">@blogPost.Heading</h5>

                            <p class="small text-muted mb-2">
                                Author: @blogPost.Author <br />
                                Published: @blogPost.PublishedDate.ToShortDateString()
                            </p>

                            

                            <p class="card-text mb-3 flex-grow-1">@blogPost.ShortDescription</p>

                            <div class="mt-auto text-start">
                                <a class="btn btn-dark"
                                   asp-controller="Blogs"
                                   asp-action="Index"
                                   asp-route-urlHandle="@blogPost.UrlHandle">
                                    Read More
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>