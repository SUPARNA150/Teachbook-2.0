@model Teachbook.Web.Models.ViewModels.AddTagRequest
@{
}


<div class="bg-light bg-opacity-30 py-3 text-center">
    <div class="container">
        <h3>Add New Tag - Admin Functionality</h3>
    </div>
</div>

<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" id="name" asp-for="Name" required/>
            <span class="text-danger" asp-validation-for="Name"></span>
            <!-- name="name" -->

        </div>

        <div class="mb-3">
            <label class="form-label">Display Name</label>
            <input type="text" class="form-control" id="displayName" asp-for="DisplayName" required/>
            <span class="text-danger" asp-validation-for="DisplayName"></span>
            <!-- name="displayName" -->

        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>
    </form>
</div>
